    color: #444;
    font-size: 14px;
    line-height: 1.42;
    font-family: -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
  }

  page, view, text, scroll-view, input, textarea, button, form, image {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
  }

  image {
    vertical-align: top;
  }

  .input-placeholder {
    color: #999;
  }

  .iconfont {
    font-size: 16px;
