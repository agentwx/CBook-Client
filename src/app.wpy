    font-weight: normal;
  }

  .spliter {
    height: 10px;
    background-color: #f5f5f5;
  }

  // global flex styles
  .flex {
    .flex();

    &-inline {
      .inline-flex();
    }

    &-center {
      .flex-center();
    }

    &-v-center {
      .flex-v-center();
    }

    &-h-center {
      .flex-h-center();
    }

    &-end {
      .flex();
      justify-content: flex-end;
      align-items: flex-end;
    }

    &-v-end {
      .flex();
      align-items: flex-end;
    }

    &-h-end {
      .flex();
      justify-content: flex-end;
    }

    &-between {
      .flex();
      justify-content: space-between;
    }

    &-around {
