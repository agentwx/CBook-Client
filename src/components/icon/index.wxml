<view class="icon {{type!=='iconfont' ? 'img' : ''}} {{size}} {{customClass}}" style="{{customStyle}}">
  <text wx:if="{{type=='iconfont'}}" class="iconfont icon-{{name}}" style="{{iconColor}}"></text>
  <image wx:if="{{type=='png'||type=='svg'||type=='gif'}}" class="icon-img" src="../../images/{{name}}.{{type}}"></image>
</view>
