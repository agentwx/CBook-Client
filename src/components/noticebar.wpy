<style lang="less">
  @import "../less/mixin";

  .alert-wrap {
    .flex-v-center();
    justify-content: space-between;
    padding: 16rpx 24rpx;
    background-color: #fff7d6;
    color: #ff9d33;
    font-size: 26rpx;

    > .iconfont {
      font-size: 40rpx;
    }
  }

  .alert-bd {
    flex: 1;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
  }
</style>

<template>
  <view class="alert-wrap" style="{{style}}">
    <view class="alert-bd">
      <slot></slot>
    </view>
    <text class="iconfont icon-arrow-right" wx:if="{{showArrow}}"></text>
  </view>
</template>

<script>
  import wepy from 'wepy'

  const coerce = t =>
    typeof t === 'string' ? JSON.parse(t) : t

  export default class Button extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      showArrow: {
        type: [Boolean, String],
        default: true,
        coerce: coerce
      }
    }
  }
</script>
