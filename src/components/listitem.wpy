<style type="less">
  @import "../less/mixin";

  .list-item {
    position: relative;
    .flex-v-center();
    padding: 24rpx 30rpx;
    background-color: #fff;

    &.bordered {
      &:after {
        content: '';
        position: absolute;
        left: 20rpx;
        right: 20rpx;
        bottom: 0;
        border-bottom: 1rpx solid @color-underline;
      }
    }

    .list-item-bd {
      flex: 1;
    }

    .list-item-icon {
      margin-right: 10rpx;
    }

    &.enabled {
      &:active {
        background-color: @color-active;
      }
    }

    .list-arrow {
      font-size: 36rpx;
      color: #888;
      margin-left: 10rpx;
    }
  }
</style>
<template>
  <view class="list-item {{showArrow ? 'enabled' : ''}} {{bordered ? 'bordered' : ''}}" style="{{style}}" @tap="tap">
    <icon wx:if="{{icon}}" :name="icon" :size="iconSize" class="list-item-icon"></icon>
    <view class="list-item-bd">
      <slot></slot>
    </view>
    <text class="list-arrow iconfont icon-arrow-right-o" wx:if="{{showArrow}}"></text>
  </view>
</template>
<script>
  import wepy from 'wepy'
  import Icon from './icon'

  const coerce = t =>
    typeof t === 'string' ? JSON.parse(t) : t

  export default class Listitem extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      icon: String,
      iconSize: {
        type: String,
        default: 'middle'
      },
      showArrow: {
        type: [Boolean, String],
        default: true,
        coerce: coerce
      },
      bordered: {
        type: [Boolean, String],
        default: true,
        coerce: coerce
      }
    }
    components = {
      icon: Icon
    }
    data = {
    }
    methods = {
      tap ($event) {
        this.$emit('tap', Number(this.$index), $event)
      }
    }
  }
</script>
