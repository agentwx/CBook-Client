<style type="less">
  @import "../styles/mixins/common";

  .list-item {
    position: relative;
    .flex-v-center();
    padding: 12px 15px;
    background-color: #fff;

    &.bordered {
      &:after {
        content: '';
        position: absolute;
        left: 10px;
        right: 10px;
        bottom: 0;
        border-bottom: .5px solid @color-underline;
      }
    }

    .list-item-bd {
      flex: 1;
    }

    .list-item-icon {
      margin-right: 5px;
    }

    &.enabled {
      &:active {
        background-color: @color-active;
      }
    }

    .list-arrow {
      font-size: 17px;
      color: #999;
      margin-left: 5px;
    }
  }
</style>
<template>
  <view class="list-item {{showArrow ? 'enabled' : ''}} {{bordered ? 'bordered' : ''}}" style="{{style}}" @tap="tap">
    <icon
      wx:if="{{icon}}"
      :name="icon"
      :size="iconSize"
      class="list-item-icon"
    >
    </icon>
    <view class="list-item-bd">
      <slot></slot>
    </view>
    <text
      class="list-arrow iconfont icon-arrow-right"
      wx:if="{{showArrow}}"
    >
    </text>
  </view>
</template>
<script>
  import wepy from 'wepy'
  import Icon from './icon'

  const coerce = t =>
    typeof t === 'string' ? JSON.parse(t) : t

  export default class Index extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      icon: String,
      iconSize: {
        type: String,
        default: 'middle'
      },
      showArrow: {
        type: [Boolean, String],
        default: true,
        coerce: coerce
      },
      bordered: {
        type: [Boolean, String],
        default: true,
        coerce: coerce
      }
    }
    components = {
      icon: Icon
    }
    data = {
    }
    methods = {
      tap ($event) {
        this.$emit('tap', Number(this.$index), $event)
      }
    }
  }
</script>
