<view class="list-item {{isShowArrow ? 'enabled' : ''}} {{isBordered ? 'bordered' : ''}} {{customClass}}" style="{{customStyle}}">
  <icon wx:if="{{icon}}" name="{{icon}}" size="{{iconSize}}" custom-style="margin-right: 5px;"></icon>
  <view class="list-item-bd">
    <slot></slot>
  </view>
  <text class="list-arrow iconfont icon-arrow-right-o" wx:if="{{isShowArrow}}"></text>
</view>
