<style lang="less">
  @import "../styles/mixin";

  .tag-item {
    display: inline-block;
    padding: 6px 14px;
    border-radius: 20px;
    background-color: #f2f3f7;
    color: #888;
    font-size: 13px;
    margin-right: 5px;
    margin-bottom: 5px;

    &.mini {
      padding: 3px 8px;
      font-size: 12px;
    }

    &.actived {
      &:active {
        background-color: darken(#f2f3f7, 5%);
      }
    }

    &.selected {
      background-color: #deebf5;
      color: #08affe;
    }
  }
</style>

<template>
  <view class="tag-item {{size}} {{actived ? 'actived' : ''}} {{selected ? 'selected' : ''}}" style="{{style}}"><slot></slot></view>
</template>

<script>
  import wepy from 'wepy'

  const coerce = t =>
    typeof t === 'string' ? JSON.parse(t) : t

  export default class Index extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      size: {
        type: String,
        default: 'normal'
      },
      actived: {
        type: [Boolean, String],
        default: false,
        coerce: coerce
      },
      selected: {
        type: [Boolean, String],
        default: false,
        coerce: coerce
      }
    }

    methods = {
    }
  }
</script>
