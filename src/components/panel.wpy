<style lang="less">
  @import "../less/mixin";
  @import "../less/hairline";

  .panel {
    background-color: #fff;
    padding: 24rpx 30rpx;
    margin-bottom: 20rpx;
  }

  .panel-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;

    > view {

    }
  }

  .panel-body {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
  }

  .panel-footer {
    position: relative;
    padding-top: 24rpx;
    display: flex;
    justify-content: space-between;

    &:after {
      .hairline-top();
    }
  }
</style>
<template>
  <view class="panel" style="{{style}}" @tap="onTap">
    <slot name="title"></slot>
    <view class="panel-body">
      <slot></slot>
    </view>
    <slot name="footer"></slot>
  </view>
</template>
<script>
  import wepy from 'wepy'

  export default class Panel extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      params: Object
    }
    methods = {
      onTap (e) {
        this.$emit('tap', this.params, e)
      }
    }
  }
</script>
