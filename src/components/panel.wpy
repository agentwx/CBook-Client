<style lang="less">
  @import "../styles/mixin";
  @import "../styles/hairline";

  .panel {
    background-color: #fff;
    margin-bottom: 10px;
  }

  .panel-title {
    position: relative;
    font-size: 15px;
    font-weight: bold;

    &:after {
      .hairline-bottom();
    }

    > view {
      display: flex;
      justify-content: space-between;
    }
  }

  .panel-body {
    padding: 10px 12px;
  }

  .panel-footer {
    &:after {
      .hairline-top();
    }

    > view {
      display: flex;
      justify-content: space-between;
    }
  }

  .panel-title,
  .panel-footer {
    position: relative;
    padding: 10px 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
</style>
<template>
  <view class="panel" style="{{style}}" @tap="onTap">
    <slot name="title"></slot>
    <view class="panel-body">
      <slot></slot>
    </view>
    <slot name="footer"></slot>
  </view>
</template>
<script>
  import wepy from 'wepy'

  export default class Index extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      params: Object
    }
    methods = {
      onTap (e) {
        this.$emit('tap', this.params, e)
      }
    }
  }
</script>
