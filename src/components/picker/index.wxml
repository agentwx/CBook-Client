<picker mode="selector"
        bindchange="change"
        bindcolumnchange="columnchange"
        class="{{isDisabled ? 'disabled' : ''}}"
        value="{{selectIndex}}"
        range="{{names}}"
        disabled="{{isDisabled}}"
>
  <view class="picker {{size}} {{customClass}}" style="{{customStyle}}">
    <text>{{names[selectIndex]}}</text>
    <icon name="arrow-down" color="#999"></icon>
  </view>
</picker>
