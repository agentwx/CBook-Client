<style type="less">
  @import "../styles/mixin";

  .icon-item {
    flex: 1;
    width: 100%;
    padding: 8px 8px 10px;
    text-align: center;
    white-space: nowrap;

    &:active {
      background-color: @color-active;
    }

    &.inline {
      display: inline-block;
    }

    > .icon {
      margin-bottom: 3px;
    }
  }
</style>
<template>
  <view class="icon-item {{inline ? 'inline' : ''}}" style="{{style}}" @tap="tap">
    <icon :size="iconSize" :type="iconType" :name="icon"></icon>
    <view>
      <slot></slot>
    </view>
  </view>
</template>
<script>
  import wepy from 'wepy'
  import Icon from './icon'

  const coerce = t =>
    typeof t === 'string' ? JSON.parse(t) : t

  export default class Index extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      icon: String,
      iconSize: {
        type: String,
        default: 'large'
      },
      iconType: String,
      inline: {
        type: [Boolean, String],
        default: true,
        coerce: coerce
      },
      tabIndex: {
        type: [String, Number],
        coerce: v => +v
      }
    }
    components = {
      icon: Icon
    }
    data = {
    }
    methods = {
      tap ($e) {
        this.$emit('tap', this.tabIndex, $e)
      }
    }
  }
</script>
