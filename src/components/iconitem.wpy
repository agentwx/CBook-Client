<style type="less">
  @import "../less/mixin";

  .icon-item {
    flex: 1;
    .flex-center();
    flex-direction: column;
    padding: 16rpx 16rpx 20rpx;
    background-color: #fff;

    &:active {
      background-color: @color-active;
    }

    &.inline {
      .inline-flex();
    }
  }
</style>
<template>
  <view class="icon-item {{inline ? 'inline' : ''}}" style="{{style}}" @tap="tap">
    <icon :size="iconSize" :type="iconType" :name="icon"></icon>
    <slot></slot>
  </view>
</template>
<script>
  import wepy from 'wepy'
  import Icon from './icon'

  const coerce = t =>
    typeof t === 'string' ? JSON.parse(t) : t

  export default class Iconitem extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      icon: String,
      iconSize: {
        type: String,
        default: 'large'
      },
      iconType: String,
      inline: {
        type: [Boolean, String],
        default: true,
        coerce: coerce
      }
    }
    components = {
      icon: Icon
    }
    data = {
    }
    methods = {
      tap ($event) {
        this.$emit('tap', Number(this.$index), $event)
      }
    }
  }
</script>
