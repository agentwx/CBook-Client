<style lang="less">
  @import "../styles/mixins/common";

  .modal {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: rgba(0,0,0,.4);
    .flex-center();
    z-index: 1000;

    &.visible {
      display: flex;
    }

    &.hide {
      display: none;
    }
  }

  .modal-dialog {
    position: relative;
    width: 80%;
    max-width: 320px;
    animation: zoom-out .2s ease-out;

    &.hasTitle {
      .modal-content {
        border-top-left-radius: 0;
        border-top-right-radius: 0;
      }
    }
  }

  .modal-header {
    .flex-v-center();
    justify-content: space-between;
    background-color: #fff;
    padding-left: 15px;
    padding-right: 15px;
    padding-top: 10px;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
  }

  .modal-content {
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-sizing: border-box;
  }

  .modal-close {
    position: absolute;
    padding: 10px;
    right: 0;
    top: 0;

    .icon {
      vertical-align: top;
    }
  }

  .modal-footer {
    padding-top: 10px;

    > view {
      .flex-center();
    }

    .button {
      margin-left: 5px;
      margin-right: 5px;
    }
  }

  @keyframes zoom-out {
    0% {
      opacity: .3;
      transform: translateY(20%) scale(1.1);
    }

    100% {
      opacity: 1;
      transform: none;
    }
  }

  @keyframes zoom-out {
    0% {
      opacity: .3;
      transform: translateY(20%) scale(1.1);
    }

    100% {
      opacity: 1;
      transform: none;
    }
  }
</style>

<template>
  <view class="modal" wx:if="{{visible}}" style="{{style}}">
    <view class="modal-dialog {{title !== '' ? 'hasTitle' : ''}}">
      <view class="modal-header" wx:if="{{title !== ''}}">
        <text>{{title}}</text>
      </view>
      <view class="modal-close" wx:if="{{showClose}}" @tap="closeModal">
        <closeIcon size="small" color="#999" name="close"></closeIcon>
      </view>
      <view class="modal-content">
        <slot></slot>
        <view class="modal-footer">
          <slot name="footer"></slot>
        </view>
      </view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import Icon from './icon'

  const coerce = t =>
    typeof t === 'string' ? JSON.parse(t) : t

  export default class Index extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      visible: {
        type: [Boolean, String],
        default: false,
        coerce: coerce,
        twoWay: true
      },
      title: {
        type: String,
        default: ''
      },
      showClose: {
        type: [Boolean, String],
        default: true,
        coerce: coerce
      }
    }

    components = {
      closeIcon: Icon
    }

    data = {}

    open (e) {
      this.visible = true
      this.$apply()
      this.$emit('modalOpen', e)
    }

    close (e) {
      this.visible = false
      this.$apply()
      this.$emit('modalClose', e)
    }

    methods = {
      closeModal (e) {
        this.close(e)
      }
    }
  }
</script>
