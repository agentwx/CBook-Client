<style lang="less">
  @import "../styles/mixin";

  .form-item {
    background-color: #fff;

    &:not(.nomargin) {
      margin-bottom: 20rpx;
    }
  }

  .form-item-inner {
    .flex-v-center();
    margin-left: 30rpx;
    margin-right: 30rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;

    &.underline {
      border-bottom: 1rpx solid @color-underline;
    }
  }

  .form-item-label {
    display: inline-block;
    white-space: nowrap;
    margin-right: 16rpx;
    color: #888;
  }

  .form-item-bd {
    border-radius: 8rpx;
    flex: 1;
    .flex-v-center();

    > .input {
      width: 100%;
      padding: 12rpx 24rpx;
      font-size: 28rpx;
      box-sizing: border-box;
      flex: 1;

      &.large {
        height: @large;
        font-size: 32rpx;
      }
      &.normal {
        height: @normal;
      }
      &.medium {
        height: @medium;
      }
      &.small {
        height: @small;
      }
    }

    > .icon-left {
      margin-right: -18rpx;
    }

    > .icon-right {
      display: flex;
      align-items: center;
      margin-left: -24rpx;
    }

    .ctrl-icon {
      padding: 6rpx;
      margin-left: 4rpx;
      color: #8a8a8a;
    }

    .pwd-ctrl {
      font-size: 36rpx;
    }

    &.bordered {
      border: 1rpx solid @color-border;
    }
  }
</style>
<template>
  <view class="form-item {{nomargin ? 'nomargin' : ''}}" style="{{style}}">
    <view class="form-item-inner {{underline ? 'hairline--bottom' : ''}}">
      <text wx:if="{{label}}" class="form-item-label" style="width:{{labelWidth}};">{{label}}</text>
      <view class="form-item-bd {{bordered ? 'bordered' : ''}}">
        <icon wx:if="{{icon}}" class="icon-left" :type="iconType" color="#999" :name="icon" :size="size"/>
        <input wx:if="{{!password}}" type="{{type}}" class="input {{size}}" focus="{{focus}}" disabled="{{disabled}}"
               placeholder="{{placeholder}}" placeholder-class="{{placeholderClass}}" confirm-type="{{confirmType}}" value="{{value}}" maxlength="{{maxlength}}" @tap="tap" @input="input"
               @focus="focus" @blur="blur" @confirm="confirm" style="text-align:{{textAlign}}"/>
        <input wx:if="{{password}}" password class="input {{size}}" focus="{{focus}}" disabled="{{disabled}}"
               placeholder="{{placeholder}}" placeholder-class="{{placeholderClass}}" confirm-type="{{confirmType}}" value="{{value}}" maxlength="{{maxlength}}" @tap="tap" @input="input"
               @focus="focus" @blur="blur" @confirm="confirm" style="text-align:{{textAlign}}"/>
        <view class="icon-right" wx:if="{{showClear || showEye}}">
          <view class="ctrl-icon iconfont icon-close-circle" wx:if="{{showClear}}" @tap="clearField"
                style="display: {{shouldClearShow ? '' : 'none'}}">
          </view>
          <view class="ctrl-icon pwd-ctrl iconfont icon-{{eyeName}}" wx:if="{{showEye}}" @tap="togglePwdVisible">
          </view>
        </view>
      </view>
    </view>
  </view>
</template>
<script>
  import wepy from 'wepy'
  import Icon from './icon'

  const coerce = t =>
    typeof t === 'string' ? JSON.parse(t) : t

  export default class Formitem extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      placeholderClass: {
        type: String,
        default: 'input-placeholder'
      },
      type: {
        type: String,
        default: 'text'
      },
      confirmType: {
        type: String,
        default: 'done'
      },
      label: String,
      icon: String,
      iconType: String,
      labelWidth: {
        type: String,
        default: ''
      },
      size: {
        type: String,
        default: 'normal'
      },
      value: {
        type: [String, Number],
        default: '',
        twoWay: true
      },
      maxlength: {
        type: [String, Number],
        default: -1,
        coerce: v => +v
      },
      placeholder: {
        type: String,
        default: ''
      },
      textAlign: {
        type: String,
        default: 'left'
      },
      bordered: {
        type: [Boolean, String],
        default: true,
        coerce: coerce
      },
      showClear: {
        type: [Boolean, String],
        default: false,
        coerce: coerce
      },
      showEye: {
        type: [Boolean, String],
        default: false,
        coerce: coerce
      },
      nomargin: {
        type: [Boolean, String],
        default: false,
        coerce: coerce
      },
      underline: {
        type: [Boolean, String],
        default: false,
        coerce: coerce
      },
      password: {
        type: String,
        default: ''
      },
      focus: {
        type: [Boolean, String],
        default: false,
        coerce: coerce
      },
      disabled: {
        type: [Boolean, String],
        default: false,
        coerce: coerce
      }
    }

    components = {
      icon: Icon,
      iconclear: Icon,
      iconeye: Icon
    }

    data = {
    }

    computed = {
      shouldClearShow() {
        return this.showClear ? this.value !== '' : false
      },
      eyeName() {
        return this.password ? 'eye-closed' : 'eye-opened'
      }
    }

    methods = {
      clearField() {
        this.value = ''
      },
      togglePwdVisible() {
        this.password = !this.password
      },
      tap(e) {
        this.$emit('tap', e.detail.value, e)
      },
      input(e) {
        this.value = e.detail.value
        this.$emit('input', e.detail.value, e)
      },
      focus(e) {
        this.$emit('focus', e.detail.value, e)
      },
      blur(e) {
        this.$emit('blur', e.detail.value, e)
      },
      confirm(e) {
        this.$emit('confirm', e.detail.value, e)
      }
    }
  }
</script>
