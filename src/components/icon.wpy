<style lang="less">
  @import "../less/mixin";

  .iconSize (@size) {
    width: @size;
    height: @size;
    font-size: @size;
  }

  .icon {
    display: inline-block;
    vertical-align: top;

    &.x-large {
      .iconSize(80rpx);
    }

    &.large {
      .iconSize(64rpx);
    }

    &.middle {
      .iconSize(56rpx);
    }

    &.normal {
      .iconSize(40rpx);
    }

    &.small {
      .iconSize(28rpx);
    }

    &.x-small {
      .iconSize(20rpx);
    }

    .icon-img {
      display: block;
      width: 100%;
      height: 100%;
      text-align: center;
      font-size: inherit;
    }
  }
</style>

<template>
  <view class="icon {{size}} {{className}}" style="{{style}}" @tap="tap">
    <text wx:if="{{type=='iconfont'}}" class="icon-img iconfont icon-{{name}}" style="color: {{color}}"></text>
    <image wx:if="{{type=='png'||type=='svg'||type=='gif'}}" class="icon-img" src="../images/{{name}}.{{type}}" mode="{{mode}}"></image>
  </view>
</template>

<script>
  import wepy from 'wepy'

  export default class Icon extends wepy.component {
    props = {
      className: {
        type: String,
        default: ''
      },
      style: {
        type: String,
        default: ''
      },
      size: {
        type: String,
        default: 'normal'
      },
      name: {
        type: String,
        default: ''
      },
      mode: {
        type: String,
        default: 'aspectFit'
      },
      type: {
        type: String,
        default: 'iconfont'
      },
      color: {
        type: String,
        default: '#08b0fe'
      }
    }

    methods = {
      tap ($event) {
        this.$emit('tap', $event)
      }
    }
  }
</script>
