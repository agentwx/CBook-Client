<view class="raty-wrap {{isReadonly ? 'readonly' : ''}} {{customClass}}" style="{{customStyle}}">
  <block wx:for="{{max}}" wx:key="index">
    <text class="raty-item iconfont icon-star {{index < ratyIndex ? 'active' : ''}}" data-index="{{index}}" bindtap="change"></text>
  </block>
  <text class="raty-value">{{value}}</text>
</view>
