<style lang="less">
  @import "../styles/mixin";

  .steps-wrap {
    .flex();
  }

  .step-item {
    position: relative;
    flex: 1;
    text-align: center;

    .step-dot {
      position: relative;
      display: inline-block;
      width: 12px;
      height: 12px;
      background-color: #ddd;
      background-clip: padding-box;
      border: 3px solid rgba(0,0,0,0);
      border-radius: 50%;
      z-index: 5;
      -webkit-box-sizing: content-box;
      box-sizing: content-box;
    }

    &:before,
    &:after {
      content: '';
      height: 3px;
      width: 50%;
      position: absolute;
      top: 8px;
      background-color: #ddd;
    }

    &:before {
      left: 0;
      right: 50%;
    }

    &:after {
      left: 50%;
      right: 0;
    }

    &:first-child:before,
    &:last-child:after {
      display: none;
    }

    .step-text {
      margin-top: 6px;
      color: #666;
    }

    &.actived {
      /*&:before,
      &:not(.last):after {
        background-color: #09c8fe;
      }*/

      &:before,
      &:after {
        background-color: #09c8fe;
      }

      .step-dot {
        background-color: #09c8fe;
        border-color: rgba(9,200,254,.4);
      }

      .step-text {
        color: #333;
      }
    }
  }
</style>

<template>
  <view class="steps-wrap" style="{{style}}">
    <repeat for="{{items}}">
      <view class="step-item {{index < stepIndex + 1 ? 'actived' : ''}} {{index === stepIndex ? 'last' : ''}}">
        <view class="step-dot"></view>
        <view class="step-text">{{item}}</view>
      </view>
    </repeat>
  </view>
</template>

<script>
  import wepy from 'wepy'

  export default class Index extends wepy.component {
    props = {
      style: {
        type: String,
        default: ''
      },
      stepIndex: {
        type: [String, Number],
        default: 0,
        coerce: v => +v
      },
      items: {
        type: Array,
        default: []
      }
    }
  }
</script>
