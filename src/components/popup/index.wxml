<overlay
  wx:if="{{ inited && overlay }}"
  mask
  show="{{ show }}"
  z-index="{{ zIndex }}"
  extra-style="{{ overlayStyle }}"
  bind:tap="onClickOverlay"
/>
<view
  wx:if="{{ inited }}"
  class="{{extraClass}} popup {{ position ? 'popup--' + position : '' }}"
  style="z-index: {{ zIndex }}; animation-name: {{ transition || position }}-{{ type }}; animation-duration: {{ duration }}ms; {{ display ? '' : 'display: none;' }}; {{ extraStyle }}"
  bind:animationend="onAnimationEnd"
>
  <slot />
</view>
