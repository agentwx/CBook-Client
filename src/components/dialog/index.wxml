<popup
  show="{{ show }}"
  transition="scale"
  z-index="{{ zIndex }}"
  overlay="{{ overlay }}"
  extra-class="dialog"
  close-on-click-overlay="{{ closeOnClickOverlay }}"
  bind:close="onClickOverlay"
>
  <view
    wx:if="{{ title }}"
    class="dialog__header {{ message || useSlot ? '' : 'dialog--isolated' }}"
  >
    {{ title }}
  </view>

  <slot wx:if="{{ useSlot }}" />
  <view
    wx:elif="{{ message }}"
    class="dialog__message {{ title ? 'dialog__message--has-title' : '' }}"
  >
    <text>{{ message }}</text>
  </view>

  <view class="hairline--top dialog__footer">
    <vbutton
      wx:if="{{ showCancelButton }}"
      size="large"
      loading="{{ loading.cancel }}"
      class="dialog__button hairline--right"
      extra-class="dialog__cancel"
      bind:tap="onCancel"
    >
      {{ cancelButtonText }}
    </vbutton>
    <vbutton
      wx:if="{{ showConfirmButton }}"
      size="large"
      class="dialog__button"
      loading="{{ loading.confirm }}"
      extra-class="dialog__confirm"
      open-type="{{ confirmButtonOpenType }}"
      bind:tap="onConfirm"
      binderror="bindError"
      bindcontact="bindContact"
      bindopensetting="bindOpenSetting"
      bindgetuserinfo="bindGetUserInfo"
      bindgetphonenumber="bindGetPhoneNumber"
    >
      {{ confirmButtonText }}
    </vbutton>
  </view>
</popup>
