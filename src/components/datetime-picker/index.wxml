<picker
  mode="{{mode === 'datetime' ? 'multiSelector' : mode}}"
  start="{{start}}"
  end="{{end}}"
  fields="{{fields}}"
  value="{{range}}"
  bindchange="change"
  bindcolumnchange="columnChange"
  bindcancel="cancel"
  range="{{rangeArrayDisplay}}"
  range-key="{{rangeKey}}"
  disabled="{{isDisabled}}"
>
  <view class="picker {{size}} {{isDisabled ? 'disabled' : ''}} {{customClass}}" style="{{customStyle}}" wx:if="{{!isUseSlot}}">
    <text class="placeholder" wx:if="{{placeholder && date === ''}}">{{placeholder}}</text>
    <text>{{date}}</text>
    <icon name="arrow-down" color="#999"></icon>
  </view>
  <slot wx:else></slot>
</picker>
