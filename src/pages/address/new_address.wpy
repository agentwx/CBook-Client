<style lang="less">
  @import '../../styles/mixin';

  page {
    background-color: #f7f7f7;
  }

  .address-new-wrap {
    box-shadow: 0 8px 18px rgba(0,0,0,.04);
  }

  .address-defset {
    padding: 15px 10px;
    .flex-v-center();

    text {
      margin-left: 8px;
    }
  }

  .address-new-button {
    margin-top: 5px;
    margin-left: 6%;
    margin-right: 6%;
  }
</style>
<template>
  <view class="address-new-wrap">
    <form-item
      label="联系人"
      labelWidth="4em"
      bordered="false"
      nomargin="true"
      underline="true"
      value="{{name}}"
      data-field="name"
      @input="itemChange">
    </form-item>
    <form-item
      label="手机号"
      labelWidth="4em"
      bordered="false"
      nomargin="true"
      underline="true"
      value="{{mobile}}"
      data-field="mobile"
      type="number"
      @input="itemChange">
    </form-item>
    <region-picker
      label="收货地址"
      labelWidth="4em"
      bordered="false"
      nomargin="true"
      underline="true"
      value="{{region}}"
      data-field="region"
      @change="itemChange">
    </region-picker>
    <form-item
      label="详细地址"
      labelWidth="4em"
      bordered="false"
      nomargin="true"
      value="{{address}}"
      data-field="address"
      @input="itemChange">
    </form-item>
  </view>
  <view class="address-defset" @tap="toggleDefault">
    <check-box readonly="true" checked="{{isDefault}}" />
    <text>设为默认地址</text>
  </view>
  <btn custom-class="address-new-button" @tap="saveAddress">
    {{actionMode === 'edit' ? '修改' : '保存'}}
  </btn>
</template>

<script>
  import wepy from 'wepy'
  import fetch from '../../service/fetch'
  import {toast, getPrevPage} from '../../utils/util'

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '新增地址',
      usingComponents: {
        'btn': '/components/button/index',
        'check-box': '/components/check-box/index',
        'region-picker': '/components/region-picker/index',
        'form-item': '/components/form-item/index'
      }
    }

    components = {
    }

    data = {
      name: '',
      mobile: '',
      region: [],
      address: '',
      isDefault: false,
      actionMode: 'add'
    }

    methods = {
      toggleDefault () {
        this.isDefault = !this.isDefault
      },
      itemChange (e) {
        const field = e.currentTarget.dataset.field
        this[field] = e.detail.value
      },
      async saveAddress () {
        if (this.name.trim() === '') {
          return toast.error('请填写联系人')
        }

        if (this.mobile.trim() === '') {
          return toast.error('请填写手机号')
        }

        if (!/^1[3456789]\d{9}$/.test(this.mobile)) {
          return toast.error('手机号不合法')
        }

        if (this.region.length === 0) {
          return toast.error('请选择收货地址')
        }

        if (this.address.trim() === '') {
          return toast.error('请填写详细地址')
        }

        const province = this.region[0]
        const city = this.region[1]
        const region = this.region[2]

        let params = {
          name: this.name,
          mobile: this.mobile,
          province,
          city,
          region,
          address: this.address,
          isDefault: this.isDefault ? 1 : 0
        }

        if (this.actionMode === 'edit') {
          await fetch.post('/user/address/update', {...params, code: this.code})
        } else {
          await fetch.post('/user/address/add', params)
        }

        getPrevPage().loadData()
        this.$back()
      }
    }

    onLoad(params) {
      if (params.actionMode === 'edit') {
        this.actionMode = params.actionMode
        this.code = params.code
        this.name = params.name
        this.mobile = params.mobile
        this.region = [params.province, params.city, params.region]
        this.address = params.address
        this.isDefault = JSON.parse(params.isDefault)
        wx.setNavigationBarTitle({
          title: '修改地址'
        })
      }
    }
  }
</script>
