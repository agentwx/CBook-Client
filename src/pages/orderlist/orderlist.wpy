  }

  .order-hd {
    font-weight: normal;

    .order-num {
      color: #666;
    }

    .order-status {
      color: @gcolor;
      font-size: 26rpx;

      &.closed {
        color: @color-disabled;
      }
    }
  }

  .order-body {
    .flex();
    padding-top: 20rpx;
  }

  .order-cover {
    width: 160rpx;
    height: 196rpx;
    margin-right: 30rpx;
    overflow: hidden;

    image {
      width: 100%;
      height: 100%;
    }
  }

  .order-main {
    flex: 1;
    .flex-h-center();
    flex-direction: column;
    justify-content: space-between;
  }

  .order-pd-hd {
    .title {
      font-size: 30rpx;
      margin-bottom: 6rpx;
    }

    .desc {
      color: #999;
    }
  }

  .order-pd-specs {
    .flex();
    justify-content: space-between;
    font-size: 30rpx;
  }

  .order-subinfo {
    text-align: right;

    .order-sumup {
      margin-bottom: 16rpx;
      color: #777;

      .price {
        color: #333;
      }
    }
