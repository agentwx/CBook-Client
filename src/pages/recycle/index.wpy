<style lang="less">
  @import '../../styles/mixin';
  @import '../../styles/ellipsis';

  page {
    height: 100%;
    padding-bottom: 50px;
  }

  .recycle-index-wrap {
    height: 100%;
    .flex();
    flex-direction: column;

    &.expand {
      display: block;
