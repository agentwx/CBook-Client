  }


  .orders-wrap {
    margin-top: 15px;
  }

  .order-panel {
    .flex();
    position: relative;
    padding: 10px;

    &:after {
      margin-left: 20px;
      margin-right: 20px;
    }
  }

  .order-cover {
    width: 80px;
    height: 98px;
    margin-right: 15px;
    overflow: hidden;

    image {
      width: 100%;
      height: 100%;
    }
  }

  .order-main {
    width: 100%;
    overflow: hidden;
    flex: 1;
    .flex-h-center();
    flex-direction: column;
    justify-content: space-between;
  }

  .order-pd-hd {
    .title {
      font-size: 15px;
      font-weight: bold;
      .ellipsis();
      margin-bottom: 3px;
    }

    .desc {
      .light-font();
      color: #888;
      font-size: 12px;
      .ellipsis();
      margin-bottom: 3px;
    }
  }

  .order-pd-specs {
    .price {
      font-size: 15px;
    }

    .discount {
      margin-left: 15px;
