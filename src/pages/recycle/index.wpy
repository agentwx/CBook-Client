</style>

<template>
  <view class="recycle-intro">
    <view class="intro-item">
      <view class="intro-img">
        <image src="../../images/recycle_1.png"></image>
      </view>
      <view class="intro-aside">
        <view class="intro-text">手机扫码</view>
        <view class="intro-text">看收购价</view>
        <view class="intro-refuses">
          <text>什么书不收</text>
          <icon name="arrow-down"></icon>
        </view>
      </view>
    </view>

    <view class="intro-item">
      <view class="intro-img">
        <image src="../../images/recycle_2.png"></image>
      </view>
      <view class="intro-aside">
        <view class="intro-text">快递免费</view>
        <view class="intro-text">上门取件</view>
      </view>
    </view>

    <view class="intro-item">
      <view class="intro-img">
        <image src="../../images/recycle_3.png"></image>
      </view>
      <view class="intro-aside">
        <view class="intro-text">审核通过</view>
        <view class="intro-text">书款到账</view>
        <view class="intro-refuses">
          <text>什么是审核</text>
          <icon name="arrow-down"></icon>
        </view>
      </view>
    </view>

  </view>

  <view class="recycle-hint">
    《暂不支持提现，具体查看买卖规则》
  </view>

  <view class="recycle-actions">
    <btn type="default" icon="scan" size="large" inline="true" @tap="scanBarcode">扫描条形码卖书</btn>
    <btn type="default" icon="pointer" size="large" inline="true" @tap="manualInput">手动输入ISBN号</btn>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import fetch from '../../service/fetch'
  import { toast } from '../../utils/util'

  import {getStore} from 'wepy-redux'

  const store = getStore()

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '回收给星月童书',
      usingComponents: {
        'icon': '/components/icon/index',
        'btn': '/components/button/index'
      }
    }

    components = {
    }

    data = {
    }

    methods = {
      async scanBarcode () {
        const { result } = await wepy.scanCode()
        this.queryBookInfo(result)
      },
      manualInput () {
        this.$navigate('/pages/recycle/manual')
      }
    }

    async queryBookInfo (isbn) {
      const isExist = store.getState().recycles.list.find(item => item.isbn === isbn)
      if (isExist) {
        return toast.error('该图书已经扫描过')
      }
      let res = await fetch.post('/bookinfo/base', { isbn })
      store.dispatch({
        type: 'ADD_RECYCLE',
        payload: {
          product: res.datas
        }
      })
      this.$navigate('/pages/recycle/order')
    }

    onLoad() {
    }
  }
</script>
