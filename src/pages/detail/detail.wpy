    word-break: break-all;
    word-wrap: break-word;
  }

  .detail-salesInfo {
    .flex();
    justify-content: space-between;
  }

  .sale-price {
    .flex();
    align-items: baseline;

    .now-price {
      color: #eb5a21;
      font-size: 40rpx;
      margin-right: 16rpx;

      .unit {
        font-size: 26rpx;
      }
    }

    .orig-price {
      color: #999;
      text-decoration: line-through;
    }
  }

  .sales-count {
    color: #999;
  }

  .product-info {
    margin-top: 40rpx;
    margin-bottom: 40rpx;

    > view,
    .raty-wrap {
      padding: 4rpx 0;
    }
  }

  .product-flags {
    margin-top: 40rpx;

    .flag-item {
      display: inline-flex;
      align-items: center;
      margin-right: 30rpx;
      color: #888;

      .icon {
        margin-right: 10rpx;
        color: @gcolor;
      }
    }
  }

  .detail-action-bar {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #fff;
    box-shadow: 0 -16rpx 36rpx rgba(0,0,0,.04);
    z-index: 200;
    .flex();

    .action-item {
      .flex-center();
      flex-direction: column;
      height: 100rpx;
    }

    .action-cart {
      position: relative;
      flex: none;
      padding-left: 30rpx;
      padding-right: 30rpx;
      border-right: 1rpx solid #efefef;
      border-top: 1rpx solid #efefef;
      color: #666;
      font-size: 24rpx;

      .badge {
        position: absolute;
        left: 65%;
        top: -10rpx;
      }
    }

    .action-buy {
      flex: 1;

      .price {
        font-size: 36rpx;
      }

      .unit {
        font-size: 26rpx;
      }

      .buy-text {
        font-size: 32rpx;
      }

      &.cash-buy {
        color: @gcolor;
        border-top: 1rpx solid #efefef;

        &:active {
          background-color: @color-active;
        }
      }

      &.coin-buy {
        .g-gradient(50%);
        color: #fff;

        &:active {
          .g-darken-gradient(50%);
