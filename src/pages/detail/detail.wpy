  }

  .suggest-scrollview {
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;
    overflow: hidden;
  }

  .suggest-list {
    .flex();
    flex-wrap: nowrap;
  }

  .suggest-item {
    width: 208rpx;
    margin-right: 30rpx;

    .suggest-cover {
      width: 100%;
      height: 254rpx;
      overflow: hidden;

      image {
        width: 100%;
        height: 100%;
      }
    }

    .suggest-pdname {
      width: 100%;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      margin-top: 16rpx;
      margin-bottom: 10rpx;
    }

    .suggest-pdprice {
      font-size: 32rpx;
      color: #eb5a21;

      text {
        font-size: 24rpx;
      }
    }
