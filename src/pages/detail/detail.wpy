      }
    }
  }


  .detail-pdintro-wrap {
    margin-top: 60rpx;
  }

  .pdintro-title {
    text-align: center;
    font-size: 32rpx;
    margin: 0 20rpx 70rpx;
  }

  .pdintro-subtitle {
    margin: 0 20rpx 20rpx;
    border-bottom: 1rpx solid @color-border;

    > .text {
      position: relative;
      display: inline-block;
      padding: 10rpx 40rpx;
      font-size: 30rpx;
      border-top-left-radius: 12rpx;
      border-bottom-right-radius: 12rpx;
      background-color: @color-default;

      &:before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 10rpx;
        background-color: @gcolor;
        border-top-left-radius: 12rpx;
        border-bottom-right-radius: 12rpx;
      }
    }
  }

  .pdintro-body {
    margin: 0 20rpx 50rpx;

    image {
      width: 100%;
      margin-bottom: 20rpx;
    }

    &:last-child {
      margin-bottom: 0;
