<style lang="less">
  @import '../../styles/mixin';

  page {
    height: auto;
    padding-bottom: 102rpx;
  }

  .detail-image-wrap {
    height: 500rpx;
    .flex-center();

    > image {
      width: 100%;
      height: 100%;
    }
  }

  .detail-title {
    padding: 30rpx 20rpx 16rpx;
    font-size: 32rpx;
    font-weight: bold;
    word-break: break-all;
    word-wrap: break-word;
  }

  .detail-salesInfo {
    .flex();
    justify-content: space-between;
    padding: 0 20rpx 30rpx;
  }

  .sale-price {
    .flex();
    align-items: baseline;

    .now-price {
      color: #eb5a21;
      font-size: 40rpx;
      font-weight: bold;
      margin-right: 16rpx;

      .unit {
        font-weight: normal;
        font-size: 26rpx;
      }
    }

    .orig-price {
      color: #999;
      text-decoration: line-through;
    }
  }

  .sales-count {
    color: #999;
  }

  .product-info {
    padding-left: 20rpx;
    padding-right: 20rpx;

    > view {
      padding: 24rpx 0;
    }
  }

  .product-flags {
    padding: 24rpx 20rpx 20rpx;

    .flag-item {
      display: inline-flex;
      align-items: center;
      margin-right: 30rpx;
      color: #888;

      .icon {
        margin-right: 10rpx;
        color: @gcolor;
      }
    }
  }

  .detail-action-bar {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #fff;
    box-shadow: 0 -16rpx 36rpx rgba(0,0,0,.04);
    z-index: 200;
    .flex();

    .action-item {
      line-height: 1.2;
      .flex-center();
      flex-direction: column;
      height: 100rpx;
    }

    .action-cart {
      position: relative;
      flex: none;
      padding-left: 30rpx;
      padding-right: 30rpx;
      border-right: 1rpx solid @color-light-gray;
      border-top: 1rpx solid @color-light-gray;
      color: #666;
      font-size: 24rpx;

      &.shake {
        .icon-item {
          .animation(tada 1s);
        }
      }

      .badge {
        position: absolute;
        left: 65%;
        top: -10rpx;
      }
    }

    .action-buy {
      flex: 1;

      .price {
        font-size: 36rpx;
      }

      .unit {
        font-size: 26rpx;
      }

      .buy-text {
        font-size: 30rpx;
      }

      &.cash-buy {
        color: @gcolor;
        border-top: 1rpx solid @color-light-gray;

        &:active {
          background-color: @color-active;
        }
      }

      &.coin-buy {
        .g-gradient(50%);
        color: #fff;

        &:active {
          .g-darken-gradient(50%);
        }
      }
    }
  }


  .detail-pdintro-wrap {
    margin-top: 36rpx;
  }

  .pdintro-title {
    text-align: center;
    font-size: 36rpx;
    margin: 0 20rpx 50rpx;
  }

  .pdintro-subtitle {
    margin: 0 20rpx 20rpx;
    border-bottom: 1rpx solid @color-underline;

    > .text {
      position: relative;
      display: inline-block;
      padding: 8rpx 30rpx;
      font-size: 30rpx;
      border-top-left-radius: 12rpx;
      border-bottom-right-radius: 12rpx;
      background-color: @active-color;

      &:before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 10rpx;
        background-color: @gcolor;
        border-top-left-radius: 12rpx;
        border-bottom-right-radius: 12rpx;
      }
    }
  }

  .pdintro-body {
    margin: 0 20rpx 50rpx;

    image {
      width: 100%;
      margin-bottom: 20rpx;
      border: 1rpx dashed #31b3ed;
    }

    &:last-child {
      margin-bottom: 0;
    }
  }

  .pdintro-author {
    color:#777;
    font-size: 26rpx;
    .light-font();
    padding-top: 10rpx;
    padding-bottom: 16rpx;
  }

  .pdintro-content {

    .text {
      .light-font();
      font-size: 26rpx;
      line-height: 1.6;
      text-indent: 2em;
      letter-spacing: 2rpx;
      margin-bottom: 6rpx;
    }

    .expander {
      white-space: nowrap;
      color: @gcolor;
      padding: 4rpx 6rpx;
    }
  }


  .suggest-window {
    margin-top: 40rpx;
    margin-bottom: 40rpx;
  }

  .suggest-title {
    font-size: 32rpx;
    text-align: center;
    margin-bottom: 30rpx;
  }

  .suggest-scrollview {
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;
    overflow: hidden;
  }

  .suggest-list {
    .flex();
    flex-wrap: nowrap;
  }

  .suggest-item {
    width: 208rpx;
    margin-right: 30rpx;

    .suggest-cover {
      width: 100%;
      height: 254rpx;
      overflow: hidden;

      image {
        width: 100%;
        height: 100%;
      }
    }

    .suggest-pdname {
      width: 100%;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      margin-top: 16rpx;
      margin-bottom: 10rpx;
    }

    .suggest-pdprice {
      font-size: 32rpx;
      color: #eb5a21;

      text {
        font-size: 24rpx;
      }
    }
  }

  .fly-dot {
    width: 36rpx;
    height: 36rpx;
    background-color: #ff0000;
    border-radius: 50%;
  }

</style>
<template>
  <view class="detail-image-wrap">
    <image mode="aspectFit" src="{{product.smallImageUrl}}" lazyload="true"></image>
  </view>
  <view class="detail-pdinfo-wrap">
    <view class="detail-title">{{product.name}}</view>
    <view class="detail-salesInfo">
      <view class="sale-price">
        <view class="now-price">
          <text class="unit">￥</text>
          <text>{{product.price}}</text>
        </view>
        <view class="orig-price">￥{{product.costPrice}}</view>
      </view>
      <view class="sales-count">已售{{product.sales}}份</view>
    </view>

    <view class="spliter"></view>

    <view class="product-info">
      <view class="hairline--bottom">作者：{{product.author}}</view>
      <view class="hairline--bottom">出版社：{{product.press}}</view>
      <view class="hairline--bottom">出版时间：{{publishDateStr}}</view>
      <view class="hairline--bottom">
        <raty value="{{product.doubanScore}}"></raty>
      </view>
    </view>

    <view class="spliter"></view>

    <view class="product-flags">
      <view class="flag-item">
        <icon name="check"></icon>
        <text>消毒塑封</text>
      </view>
      <view class="flag-item">
        <icon name="check"></icon>
        <text>官方直营</text>
      </view>
      <view class="flag-item">
        <icon name="check"></icon>
        <text>原价回收</text>
      </view>
    </view>

  </view>

  <view class="spliter"></view>

  <view class="detail-action-bar">
    <view id="cart" class="action-item action-cart {{buyTriggered ? 'shake' : ''}}" @tap="goToCart">
      <icon-item icon="cart" iconSize="middle" custom-style="padding:0;">购物车</icon-item>
      <badge wx:if="{{cartCount > 0}}">{{cartCount}}</badge>
    </view>
    <view class="action-item action-buy cash-buy" @tap="goToBuy">
      <view>
        <text class="unit">￥</text>
        <text class="price">{{product.price}}</text>
      </view>
      <view class="buy-text">直接买</view>
    </view>
    <view id="cart-btn" class="action-item action-buy coin-buy" @tap="addToCart">
      <view>
        <text class="unit">￥</text>
        <text class="price">29.8</text>
      </view>
      <view class="buy-text">星币价</view>
    </view>
  </view>

  <view class="detail-pdintro-wrap">
    <view class="pdintro-title">商品详情</view>
    <view class="pdintro-subtitle">
      <view class="text">内容简介</view>
    </view>
    <view class="pdintro-body">
      <view class="pdintro-content">
        <repeat for="{{contentBriefs}}">
          <view class="text">
            {{item}}
            <text class="expander" wx:if="{{shouldContentExpand && index === contentBriefs.length - 1}}" @tap="toggleExpand('content')">{{contentBriefExpand ? '收起' : '展开'}}</text>
          </view>
        </repeat>
      </view>
    </view>
    <view class="pdintro-subtitle">
      <view class="text">作者简介</view>
    </view>
    <view class="pdintro-body">
      <view class="pdintro-author">{{product.author}}</view>
      <view class="pdintro-content">
        <repeat for="{{authorBriefs}}">
          <view class="text">
            {{item}}
            <text class="expander" wx:if="{{shouldAuthorExpand && index === authorBriefs.length - 1}}" @tap="toggleExpand('author')">{{authorBriefExpand ? '收起' : '展开'}}</text>
          </view>
        </repeat>
      </view>
    </view>
    <view class="pdintro-subtitle">
      <view class="text">书摘插画</view>
    </view>
    <view class="pdintro-body">
      <repeat for="{{product.imags}}">
        <image src="{{item}}" mode="widthFix" lazyload="true" @tap="previewImage({{item}})"></image>
      </repeat>
    </view>
  </view>

  <view class="suggest-window" wx:if="{{product.relatedBookInfoList.length > 0}}">
    <view class="suggest-title">猜您喜欢</view>
    <scroll-view class="suggest-scrollview" scroll-x="true">
      <view class="suggest-list">
        <repeat for="{{product.relatedBookInfoList}}">
          <view class="suggest-item">
            <view class="suggest-cover">
              <image src="{{item.smallIconDetail}}" lazyload="true"></image>
            </view>
            <view class="suggest-pdname">{{item.name}}</view>
          </view>
        </repeat>
      </view>
    </scroll-view>
  </view>

  <flyer-group id="J_flyer" @complete="flyComplete">
    <view class="fly-dot"></view>
  </flyer-group>
</template>

<script>
  import wepy from 'wepy'
  import fetch from '../../service/fetch'
  import { toast, formatDate, getNodeRect } from '../../utils/util'
  import { connect, getStore } from 'wepy-redux'

  const store = getStore()

  const getDisplayText = (str, expand, maxLength) => {
    if (expand === true) {
      return str.split(/\n|<br>/g)
    } else {
      return str.substring(0, maxLength).replace(/[<br>，,.。：:;；]+$/, '').split(/\n|<br>/g)
    }
  }

  @connect({
    cartCount (state) {
      return state.shopcart.reduce((prev, cur) => prev + cur.COUNT, 0)
    }
  })
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '商品详情',
      usingComponents: {
        'icon-item': '/components/icon-item/index',
        'flyer-group': '/components/flyer-group/index',
        'icon': '/components/icon/index',
        'raty': '/components/raty/index',
        'badge': '/components/badge/index'
      }
    }

    components = {
    }

    data = {
      canBuy: false,
      buyTriggered: false,
      contentBriefExpand: false,
      authorBriefExpand: false,
      contentMaxLength: 100,
      authorMaxLength: 100,
      errMsg: '',
      product: {},
      contentBriefStr: '',
      authorBriefStr: ''
    }

    computed = {
      publishDateStr () {
        return formatDate(this.product.publishDate, 'yyyy年MM月dd日')
      },
      shouldContentExpand () {
        return this.contentBriefStr.length > this.contentMaxLength
      },
      shouldAuthorExpand () {
        return this.authorBriefStr.length > this.authorMaxLength
      },
      contentBriefs () {
        return getDisplayText(this.contentBriefStr, this.contentBriefExpand, this.contentMaxLength)
      },
      authorBriefs () {
        return getDisplayText(this.authorBriefStr, this.authorBriefExpand, this.authorMaxLength)
      }
    }

    watch = {
      cartCount (value, oValue) {
        if (value > oValue) {
          this.startFly()
        }
      }
    }

    methods = {
      toggleExpand (target) {
        if (target === 'content') {
          this.contentBriefExpand = !this.contentBriefExpand
        }
        if (target === 'author') {
          this.authorBriefExpand = !this.authorBriefExpand
        }
      },
      goToCart () {
        this.$switch('/pages/shopcart/shopcart')
      },
      goToBuy () {
        if (this.canBuy) {
          let products = [Object.assign(this.product, {COUNT: 1})]
          this.$navigate('/pages/order/order', {products: JSON.stringify(products)})
        } else {
          toast.error(this.errMsg)
        }
      },
      addToCart () {
        if (this.canBuy) {
          store.dispatch({
            type: 'ADD_CART',
            payload: {
              ID: this.product.goodsId
            }
          })
          store.dispatch({
            type: 'ADD_CART_PRODUCT',
            payload: {
              product: this.product
            }
          })
        } else {
          toast.error(this.errMsg)
        }
      },
      previewImage (url) {
        wx.previewImage({
          current: url,
          urls: this.product.imags
        })
      },
      flyComplete () {
        if (!this.buyTriggered) {
          this.buyTriggered = true
          setTimeout(() => {
            this.buyTriggered = false
            this.$apply()
          }, 1000)
        }
      }
    }

    async startFly () {
      const nodes = await Promise.all([getNodeRect('#cart-btn'), getNodeRect('#cart')])
      const startX = nodes[0].left + nodes[0].width / 2 - 9
      const startY = nodes[0].top + nodes[0].height / 2 - 9
      const endX = nodes[1].left + nodes[1].width / 2 - 9
      const endY = nodes[1].top + nodes[1].height / 2 - 9
      this.$wxpage.selectComponent('#J_flyer').start(startX, startY, endX, endY)
    }

    async loadData (isbn) {
      try {
        let res = await fetch.post('/bookinfo/detail', {isbn})
        this.product = {...this.product, ...res.datas}
        this.contentBriefStr = res.datas.contentBrief
        this.authorBriefStr = res.datas.authorBrief
        this.canBuy = true
        this.$apply()
      } catch (msg) {
        this.canBuy = false
        this.errMsg = msg
        this.$apply()
      }
    }

    onLoad(params) {
      this.product = {...this.product, ...params}
      this.loadData(params.isbn)
    }
  }
</script>
