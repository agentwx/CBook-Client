<script>
import wepy from 'wepy'
import Raty from '@/components/raty'
import Tag from '@/components/tag'
import Icon from '@/components/icon'
import { getNodeRef } from '../../utils/util'
import fetch from '../../service/fetch'

export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '星月童书'
  }

  components = {
    raty: Raty,
    tag: Tag,
    iconage: Icon,
    iconcate: Icon,
    iconlang: Icon
  }

  data = {
    isSearchShow: false,
    filterBarFixed: false,
    filterType: 'none',
    products: []
  }

  methods = {
    showSearch () {
      this.isSearchShow = true
    },
    hideSearch () {
      this.isSearchShow = false
    },
    viewDetail (item) {
      this.$navigate('/pages/detail/detail', item)
    },
    showFilter (type) {
      this.filterType = type
      if (type !== 'none' && this.lastScrollTop !== Math.floor(this.filterBarTop) && !this.filterBarFixed) {
        wx.pageScrollTo({
          scrollTop: this.filterBarTop
        })
      }
    }
  }

  onPageScroll (e) {
    let isFixed = false
    this.lastScrollTop = e.scrollTop

    if (e.scrollTop > this.filterBarTop) {
      isFixed = true
    } else {
      isFixed = false
    }

    if (isFixed !== this.filterBarFixed) {
      this.filterBarFixed = isFixed
      this.$apply()
    }
  }

  getFilterBarTop() {
    getNodeRef('#filter_bar').then(res => {
      this.filterBarTop = res.top
    })
  }

  async loadProducts (params = {filter: [], sort: []}) {
    params = {
      offset: this.pageNum,
      limit: 15,
      ...params
    }

    let res = await fetch.post('/sales/list', params)
    this.products = res.datas.Items
    this.$apply()
  }

  onLoad() {
    this.pageNum = 1
    this.getFilterBarTop()
    this.loadProducts()
  }
}
</script>
