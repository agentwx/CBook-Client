  <modal-spinner id="spin" wx:if="{{isLoading && isLoadByFilter}}" />
</template>

<script>
import wepy from 'wepy'
import Raty from '@/components/raty'
import Tag from '@/components/tag'
import Icon from '@/components/icon'
import { getNodeRef } from '../../utils/util'
import fetch from '../../service/fetch'

export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '星月童书',
    usingComponents: {
      'modal-spinner': '/components/modal-spinner/index'
    }
  }

  components = {
    raty: Raty,
    tag: Tag,
    iconage: Icon,
    iconcate: Icon,
    iconlang: Icon
  }

  data = {
    isLoading: true,
    isLoadByFilter: false,
    filterBarFixed: false,
    filterType: 'none',
    products: []
  }

  methods = {
    toSearch () {
      this.$navigate('/pages/search/search')
    },
    viewDetail (item) {
      this.$navigate('/pages/detail/detail', item)
    },
    showFilter (type) {
      this.filterType = type
      if ((type === 'sort' || type === 'catelog') && this.lastScrollTop !== Math.floor(this.filterBarTop) && !this.filterBarFixed) {
        wx.pageScrollTo({
          scrollTop: this.filterBarTop
        })
      }
      if (type === 'popular' || type === 'new') {
        this.loadByfilterTag(type)
      }
    },
    filterByTag (name) {
      this.loadByfilterTag(name)
    }
  }

  onPageScroll (e) {
    let isFixed = false
    this.lastScrollTop = e.scrollTop

    if (e.scrollTop > this.filterBarTop) {
      isFixed = true
    } else {
      isFixed = false
    }

    if (isFixed !== this.filterBarFixed) {
      this.filterBarFixed = isFixed
      this.$apply()
    }
  }

  onReachBottom () {
    this.loadProducts()
  }

  loadByfilterTag (name) {
    this.isLoadByFilter = true
    this.filterType = 'none'
    this.pageNum = 1
    this.loadProducts()
  }

  getFilterBarTop() {
    getNodeRef('#filter_bar').then(res => {
      this.filterBarTop = res.top
    })
  }

  async loadProducts (params = {filter: [], sort: []}) {
    params = {
      offset: this.pageNum,
      limit: 15,
      ...params
    }

    try {
      this.isLoading = true
      let res = await fetch.post('/sales/list', params, false)
      if (this.pageNum > 1) {
        if (res.datas.Items.length > 0) {
          this.pageNum++
          this.products = this.products.concat(res.datas.Items)
          this.$apply()
        }
      } else {
        this.pageNum++
        this.products = res.datas.Items
        this.$apply()
      }
    } finally {
      this.isLoading = false
      this.isLoadByFilter = false
      this.$apply()
    }
  }

  onLoad() {
    this.pageNum = 1
    this.getFilterBarTop()
    this.loadProducts()
  }
}
</script>
