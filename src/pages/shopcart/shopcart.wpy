<style lang="less">
  @import '../../less/mixin';

  page {
    padding-bottom: 100rpx;
  }

  .cart-edit-hd {
    .flex-v-center();
    justify-content: space-between;
    padding: 40rpx 20rpx 0;
    font-size: 32rpx;

    .edit-left {
      .flex-v-center();

      .lib-icon {
        margin-right: 10rpx;
        font-size: 40rpx;
      }

      check-box {
        position: relative;
        top: -2rpx;
      }
    }
  }

  .cart-checkbox {
    margin-right: 20rpx;
  }

  .cart-list {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
  }

  .cart-panel {
    .flex();
    padding-left: 20rpx;
    padding-right: 20rpx;
    margin-bottom: 30rpx;
  }

  .cart-col-checkbox {
    .flex-v-center();
    min-width: 36rpx;
  }

  .cart-pd-cover {
    width: 160rpx;
    height: 196rpx;
    margin-right: 20rpx;

    image {
      width: 100%;
      height: 100%;
    }
  }

  .cart-pd-main {
    flex: 1;
    .flex();
    flex-direction: column;
    justify-content: space-between;

    .pd-title {
      font-size: 30rpx;
      margin-bottom: 6rpx;
    }

    .pd-desc {
      .light-font();
      color: #999;
      font-size: 24rpx;
    }

    .pd-orig-price {
      .light-font();
      color: #777;
      font-size: 26rpx;
    }

    .pd-now-price {
      font-size: 32rpx;

      > .unit {
        font-size: 26rpx;
      }
    }

    .cart-pd-from {
      color: @gcolor;
    }
  }

  .cart-pd-footer {
    .flex();
    justify-content: space-between;
  }

  .cart-pdft {
    .flex();
    .pd-count {
      position: relative;
      margin-left: 20rpx;
