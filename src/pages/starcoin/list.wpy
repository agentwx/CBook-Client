<style lang="less">
  @import '../../styles/mixins/common';

  .gradient (@color1, @color2) {
    background: linear-gradient(to right, @color1, @color2);
  }

  page {
    height: 100%;
    .flex();
    flex-direction: column;
  }

  .star-info {
    padding-top: 30px;
    padding-bottom: 30px;
    background: url(data:image/jpg;base64,) no-repeat 0 100%;
    background-size: 100% auto;

    &__value {
      font-size: 26px;
      font-weight: bold;
      text-align: center;
      margin-bottom: 5px;
    }

    &__hint {
      font-size: 15px;
      text-align: center;
    }
  }

  .tab-head-item {
    &.active {
      color: @gcolor;
    }
  }

  .star-panel {
    flex: 1;
    .flex();
    flex-direction: column;

    &__title {
      font-size: 15px;
      padding: 12px 15px;
    }

    &__list {
      position: relative;
      flex: 1;
      height: 100%;
      overflow: hidden;
    }

    &__scrollview {
      height: 100%;
      overflow: hidden;
    }

    &__item {
      padding: 15px;

      &--icon {
        margin-right: 10px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        .flex-center();
        color: @white;

        &.book {
          .gradient(#ffd360, #feb45a);
        }

        &.link {
          .gradient(#bce791, #7de43f);
        }

        &.share {
          .gradient(#ff8675, #f96256);
        }

        &.note {
          .gradient(#7ba0fa, #5c84ff);
        }

        &.edit {
          .gradient(#63ccff, #31a4fc);
        }
      }

      &--left {
        flex: 1;
      }

      &__name {
        margin-bottom: 2px;
      }

      &.guide {
        .star-panel__item__name {
          font-weight: bold;
        }
      }

      &__hint {
        font-size: 13px;
      }

      &__date {
        font-size: 13px;
        color: #999;
      }

      &--right {
        font-size: 15px;
      }
    }
  }

  .empty-layer {
    position: absolute;
    left: 0;
